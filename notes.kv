<Home>:
    name:"home"
    Label:
        text:"welcome to \nRenaissance University"
        font_size:"50"
        bold:"True"
        color:"#FF5623"
    AnchorLayout:    
        anchor_x:"right"
        anchor_y:"top"    
        Button:
            text:"next"
            color:(0, 0, 0, 1)
            size_hint :(0.2,0.1)
            pos:650,550
            background_color:0,0,0,0
            on_release:
                app.root.current = "first"
                root.manager.transition.direction="left"

